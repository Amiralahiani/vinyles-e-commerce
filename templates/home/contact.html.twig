{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
<section class="px-6 py-24 bg-gradient-to-b from-white via-[#f4f4f4] to-[#e5f7f8] text-[#1e1e1e]">
  <div class="max-w-xl mx-auto bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold text-center text-[#9b0d1f] mb-6">Contactez-nous</h1>
    <form method="post" action="#">
      <div class="mb-4">
        <label for="nom" class="block text-sm font-medium">Nom complet</label>
        <input type="text" id="nom" name="nom" required class="mt-1 block w-full border border-gray-300 rounded px-3 py-2">
      </div>
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium">Email</label>
        <input type="email" id="email" name="email" required class="mt-1 block w-full border border-gray-300 rounded px-3 py-2">
      </div>
      <div class="mb-6">
        <label for="message" class="block text-sm font-medium">Message</label>
        <textarea id="message" name="message" rows="5" required class="mt-1 block w-full border border-gray-300 rounded px-3 py-2"></textarea>
      </div>
      <button type="submit" class="w-full bg-[#9b0d1f] text-white py-2 px-4 rounded hover:bg-[#b31226] transition">Envoyer</button>
    </form>
  </div>
</section>
{% endblock %}
