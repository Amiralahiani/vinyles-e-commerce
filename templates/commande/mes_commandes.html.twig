{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block content %}
<div class="max-w-5xl mx-auto mt-24 px-4">
  <h1 class="text-2xl font-bold mb-6">Mes Commandes</h1>

  {% if commandes is empty %}
    <p class="text-gray-600">Vous n’avez passé aucune commande.</p>
  {% else %}
    <div class="space-y-4">
      {% for commande in commandes %}
        <div class="border p-4 bg-white rounded shadow">
          <h2 class="font-semibold">Commande #{{ commande.id }}</h2>
          <p class="text-sm text-gray-500">Passée le {{ commande.createdAt|date('d/m/Y H:i') }}</p>

          <ul class="mt-2 list-disc list-inside">
            {% for ligne in commande.commandeProduits %}
              <li>
                {{ ligne.quantite }} × {{ ligne.produit.title }} — {{ ligne.prix }}DT
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
{% endblock %}
